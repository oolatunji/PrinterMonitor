@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/common_libraries")
</head>
<body class="login">

    <div class="container">

        <div class="row">

            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

                <div class="form-container">
                    <div class="top-wrapper">
                        <div class="avatar-container">
                            <img src="images/images.png" id="avatar" class="avatar animated bounceIn" alt="avatar">
                        </div>
                    </div>
                    <div class="bottom-wrapper">
                        <div id="login-form" class="login-form">
                            <div class="form-group has-feedback">
                                <input type="text" class="form-control" placeholder="Enter username" autofocus="" id="username">
                                <span class="fa fa-user form-control-feedback"></span>
                            </div>
                            <div class="form-group has-feedback">
                                <input type="password" class="form-control" placeholder="Enter password" id="password">
                                <span class="fa fa-unlock-alt form-control-feedback"></span>
                            </div>
                            <div class="form-group">

                            </div>
                            <div class="form-group">
                                <button type="submit" id="addBtn" class="btn btn-red btn-block" onclick="LoginIn()"><i class="fa fa-user"></i> LOGIN</button>
                            </div>
                            <div class="form-group">
                                <hr>
                            </div>
                            <div class="form-group text-center">
                                <div><a href="forget.html">Forget your password?</a></div>
                                <div><a href="register.html">Create an account</a></div>
                            </div>
                            <div class="form-group">
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</body>
</html>

